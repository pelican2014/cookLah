<%= form_for :ingredient ,url: inventory_management_create_ingredients_path, method: :post, html: {id: 'create_ingredients_form'}, remote: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= label_tag :price %>
  <%= f.text_field :price  %>

  <%= label_tag :unit %>
  <%= f.text_field :unit %>

  <%= label_tag :interval %>
  <%= f.text_field :interval %>

  <%= f.submit 'Create', name: nil %>

<% end %>