<%= form_for :ingredient ,url: inventory_management_create_ingredient_path, method: :post, html: {id: 'create_ingredient_form'}, remote: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :price %>
  <%= f.text_field :price  %>

  <%= f.label :unit %>
  <%= f.text_field :unit %>

  <%= f.label :interval %>
  <%= f.text_field :interval %>

  <%= f.submit 'Create', name: nil %>

<% end %>