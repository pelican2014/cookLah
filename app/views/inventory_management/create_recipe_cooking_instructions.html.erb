<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="well">

      <div class="page-header"><h2>Create Cooking Instructions</h2></div>

      <div class="progress">
      	<div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
      	  <span class="sr-only">50% Complete</span>
      	</div>
      </div>

      <% # Add a step %>
      <div id="recipe_creation_cooking_instructions_add">
        <%= render '/inventory_management/partials/create_recipe_cooking_instructions/add_step' %>
      </div>

      <% # Display added steps %>
      <div id="recipe_creation_cooking_instructions_display">
        <%= render '/inventory_management/partials/create_recipe_cooking_instructions/show_steps' %>
      </div>

      <% # Continue %>
      <%= form_tag inventory_management_create_recipe_cooking_instructions_path, method: 'post', remote: false do %>

		<% # submit info about alr created cooking instructions in hidden field %>
		<% @cooking_instructions.each do |step| %>
		  <%= hidden_field_tag 'existing_steps[]', step %>
		<% end %>

		<%= hidden_field_tag 'recipe_ingredients_and_equipment', @recipe_ingredients_and_equipment %>

		<%= submit_tag 'Continue', name: nil, class: 'btn btn-success' %>

      <% end %>


    </div>
  </div>
  <div class="col-md-2"></div>
</div>