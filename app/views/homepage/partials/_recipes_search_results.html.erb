<div id="recipes_search_results_info_and_table">

  <!-- info about search query -->
  <div>
    <%= page_entries_info @recipes %>
  </div>

  <!-- table of search results -->
  <table class="table table-hover" id="recipes_search_results">
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Region</th>
      <th>Symbol</th>
      <th>Dietary Restriction</th>
      <th>Cooking Time</th>
      <th>Level of Difficulty</th>
      <th>Pax</th>
      <th>Price</th>
    </tr>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.code %></td>
        <td><%= recipe.name %></td>
        <td><%= recipe.region %></td>
        <td><%= recipe.symbol %></td>
        <td><%= recipe.dietary_restriction %></td>
        <td><%= recipe.cooking_time %></td>
        <td><%= recipe.level_of_difficulty %></td>
        <td><%= recipe.pax %></td>
        <td><%= recipe.price %>
        <% # stash an invisible link inside to make table row clickable (using js) %>
        <%= link_to '', homepage_read_recipe_path(recipe) %></td>
      </tr>
    <% end %>
  </table>
</div>

<!-- page numbers -->
<%= paginate @recipes, :remote => true %>