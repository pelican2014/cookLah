<!-- button and associated modal for finding equipment -->
<button type="button" class="btn btn-info" id="search_or_create_equipment_button" data-toggle="collapse" data-target="#search_or_create_equipment">Find Equipment</button>

<div class="collapse" id="search_or_create_equipment">
  <hr />
  <div class="well">
    
    <!-- search equipment -->
    <div id="equipment_search_fields">
      <%= render '/homepage/partials/create_recipe_ingredients_and_equipment/collapsible_in_modal/equipment_search_fields' %>
    </div>

    <!-- equipment search results -->
    <div id="equipment_search_results">
      <%= render '/homepage/partials/create_recipe_ingredients_and_equipment/collapsible_in_modal/equipment_search_results' %>
    </div>

    <!-- create equipment -->
    <%= render '/homepage/partials/create_equipment' %>

  </div>
</div>