<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="well">

      <div class="page-header"><h2>Create Cooking Instructions</h2></div>

      <div class="progress">
      	<div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
      	  <span class="sr-only">50% Complete</span>
      	</div>
      </div>

      <% # Add a step %>
      <div id="recipe_creation_cooking_instructions_add">
        <%= render '/homepage/partials/create_recipe_cooking_instructions/add_step' %>
      </div>

      <% # Display added steps %>
      <div id="recipe_creation_cooking_instructions_display">
        <%= render '/homepage/partials/create_recipe_cooking_instructions/show_steps' %>
      </div>

      <% # Continue %>
      <div id="recipe_creation_cooking_instructions_continue">
        <%= render '/homepage/partials/create_recipe_cooking_instructions/continue' %>
      </div>

    </div>
  </div>
  <div class="col-md-2"></div>
</div>